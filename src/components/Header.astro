---
import { SITE_TITLE } from '../consts';
import HeaderLink from './HeaderLink.astro';
---

<!--
	Header: Full-width bar with white background and subtle shadow
	w-full: Full viewport width
	bg-white: White background for clean separation
	shadow-sm: Subtle shadow for depth
	border-b border-gray-200: Thin bottom border for definition
-->
<header class="w-full bg-white shadow-sm border-b border-gray-200">
	<!--
		Navigation container: Same 650px width as main content, centered
		max-w-[650px]: Matches main content width for alignment
		mx-auto: Centers horizontally
		px-4: Horizontal padding (matches main content)
		py-4: Vertical padding (16px top and bottom)
		flex items-center justify-between: Logo left, nav right
	-->
	<nav class="max-w-[650px] mx-auto px-4 py-4 flex items-center justify-between">
		<!--
			Site title/logo
			font-sans: Uses system fonts (not Lora) for UI elements
			text-xl: Large size for prominence
			font-bold: Bold weight
			m-0: Remove default margin
		-->
		<h2 class="font-sans text-xl font-bold m-0">
			<a
				href="/"
				class="text-dark-gray no-underline hover:text-saddle-brown transition-colors duration-200"
			>
				{SITE_TITLE}
			</a>
		</h2>

		<!--
			Navigation links
			flex: Horizontal layout
			gap-6: 24px spacing between links
			font-sans: System fonts for UI
			text-base: Standard text size (16px)
		-->
		<div class="flex gap-6 font-sans text-base">
			<HeaderLink href="/">Home</HeaderLink>
			<HeaderLink href="/blog">Blog</HeaderLink>
			<HeaderLink href="/about">About</HeaderLink>
		</div>
	</nav>
</header>
